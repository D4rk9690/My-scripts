local speed = 3
local met = getrawmetatable(game)
setreadonly(met, false)
local old = met.__newindex
local old2 = met.__index

local maxTorque = 0
local angular = 0

met.__newindex = function(t, k, v)
    if tostring(t) == "#AV" then
        if k == "MotorMaxTorque" or k == "AngularVelocity" then
            if k == "MotorMaxTorque" then
                maxTorque = v
            else
                angular = v
            end
            return old(t, k, v * speed)
        end
    end
    return old(t, k, v)
end

met.__index = function(t, k)
    if tostring(t) == "#AV" then
        if k == "MotorMaxTorque" then
            return maxTorque
        elseif k == "AngularVelocity" then
            return angular
        else
            return old2(t, k)
        end
    end
    return old2(t, k)
end
